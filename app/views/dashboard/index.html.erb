<div class="container">
    <div class="row">
      <h1>Dashboard</h1>
    </div>
    <div class="row">
      <div class="col-sm-6">
        <div class="page-header">
          <h1><%= @users.count %> <small>registered users</small></h1>
        </div>
        <div class="page-header">
          <h1><%= @games.count %> <small>games</small></h1>
        </div>
        <div class="page-header">
          <h1><%= @matches.count %> <small>matches</small></h1>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="page-header">
          <h1><%= @headlines.count %> <small>headlines</small></h1>
        </div>
        <div class="page-header">
          <h1><%= @news.count %> <small>news</small></h1>
        </div>
        <div class="page-header">
          <h1><%= @streamers.count('name', :distinct => true) %> <small>different streamers</small></h1>
        </div>
      </div>
    </div>
</div>
