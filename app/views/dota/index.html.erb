<div class="container">
    <div class="col-sm-4">
        <%= render 'partials/search' %>
        <div class="row">
          <h3 style="color:white;">Live</h3>
          <% if @live_matches.empty? %>
              <hr>
              <p style="color:white;">No matches</p>
          <% else %>
              <table class="table shadow" style="width:100%;background:black;">
                  <% @live_matches.each do |match| %>
                  <tr>
                      <td width="40%" align="left">
                          <b style="color: white;"><%= match.radiant.name %></b><br>
                          <% league = get_dota_league(match.league_id) %>
                          <a href="<%= league[1] %>" target="_blank"><%= league[0] %></a>
                      </td>
                      <td width="20%" align="center">
                          <i style="color: white;">Best of
                          <%= match.series_type * 2 + 1 %></i><br>
                          <b style="color: white;">(<%= match.radiant.series_wins %>
                          -
                          <%= match.dire.series_wins %>)</b>
                      </td>
                      <td width="40%" align="right">
                          <b style="color: white;"><%= match.dire.name %></b><br>
                          <a href="http://www.trackdota.com/matches/<%= match.id %>" target="_blank">Trackdota</a>
                      </td>
                  </tr>
                  <% end %>
                <% end %>
              </table>
        </div>

        <div class="row">
          <hr>
          <%= image_tag('youtube_logo.png', :class => "img-header") %>
          <hr>
          <% DotaYoutube.last(5).reverse.each do |video| %>
            <div class="col-lg-12 col-md-12 col-xs-12">
              <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="<%= video.embed %>" allowfullscreen>

                </iframe>
              </div>
            </div>
          <% end %>
        </div>
    </div>

    <div class="col-sm-4">
      <div class="row">
        <%= image_tag('dota_reddit.png', :class => "img-header") %>
        <hr>
              <% DotaReddit.last(5).each do |post| %>
              <a href="<%= post.url %>" target="_blank" style="color:red;">
                <h4>
                  <b style="color:white;"><%= post.title %></b>
                </h4>
                <%= post.upvotes %>
                upvotes |
                <%= post.comments %>
                comments
              </a>
              <% end %>
              <hr>
      </div>
      <div class="spacer"></div>
      <div class="row">
        <%= image_tag('thescore_logo.png', :class => "img-header") %>
        <hr>
        <ul>
        <% DotaNews.last(5).each do |news| %>
        <a href="<%= news.url %>" target="_blank" style="color:blue;">
          <li><h4>
          <b style="color:white;"><%= news.title %></b>
        </h4></li>
        </a>
        <% end %>
      </ul>
        <hr>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="row">
        <%= image_tag('twitch_logo_purple.png', :class => "img-header") %>
        <hr>
        <% DotaStreamer.last(9).each do |streamer|%>
          <div class="col-lg-4 col-md-4 col-xs-4">
            <a href="<%= streamer.url %>" target="_blank" style="color:#6441a5;">
                <img class="img-responsive shadow" src="<%= streamer.logo_src %>">
                <p>
                  <b><%= streamer.name %></b><br>
                  <%= streamer.viewers %> viewers
                </p>
            </a>
          </div>
        <% end %>
      </div>
      <div class="row hidden-xs">
        <h4 style="color:white;">Highlights</h4>
        <hr>
      </div>
      <div class="row hidden-xs">
          <% DotaHighlight.last(6).each_slice(2) do |highlights| %>
          <% highlights.each do |highlight| %>
          <div class="col-lg-6 col-md-6">
              <a href="<%= highlight.url %>" target="_blank" style="color:#6441a5;">
                  <img class="img-responsive shadow" src="<%= highlight.img %>" alt="<%= highlight.title %>">
                  <p><%= highlight.title %></p>
              </a>
          </div>
          <% end %>
          <div class="clearfix"></div>
          <% end %>
      </div>

    </div>
</div>
