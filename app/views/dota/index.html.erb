<div class="ui three column stackable grid padded">
  <div class="column">
    <div class="computer only row">
      <div class="item shadow">
        <form method="get" action="https://www.google.com/search" target="_blank">
          <div class="ui big action fluid inverted left icon input">
            <input type="text" name="q" placeholder="Google" autofocus>
            <i class="search icon"></i>
            <button class="ui orange button">Search</button>
          </div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="ui blue segment shadow">
        <%= image_tag("thescore_logo.png", :class => 'ui small centered image') %>
        <div class="ui relaxed divided list">
          <% DotaNews.last(5).each do |news|%>
          <div class="item">
            <a href=<%= news.url %> target="_blank">
              <div class="content">
                <div class="ui medium header"><%= news.title %></div>
              </div>
            </a>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="ui green segment shadow">
        <h1>Useful resources</h1>
        <ul>
          <li>lorem ipsum</li>
          <li>1 2 3</li>
