<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/header' %>
</head>
<body>

  <header>
    <!-- Static navbar -->
    <nav class="navbar navbar-inverse navbar-static-top navbar-custom">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">             <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= root_url %>">
            PlaceHolder
          </a>
        </div>
        <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if params[:controller] == 'csgo' %>"><a href="/csgo">Counterstrike</a></li>
            <li class="<%= 'active' if params[:controller] == 'dota' %>"><a href="/dota2">DotA 2</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Settings', edit_user_registration_path, :class => "black" %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "black" %></li>
                </ul>
              </li>
              <% else %>
                <li><a href="<%= new_user_session_path %>">Login</a></li>
                <li><a href="<%= new_user_registration_path %>">Sign up</a></li>
              <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <%= yield %>
  </main>

    <!-- Footer -->
  <footer class="footer-distributed">

    <div class="footer-right">
      <a href="#"><%= image_tag('icons/fb.png', :class => "img-responsive") %></a>
      <a href="#"><%= image_tag('icons/twitter.png', :class => "img-responsive") %></a>
      <a href="#"><%= image_tag('icons/youtube.png', :class => "img-responsive") %></a>
      <a href="#"><%= image_tag('icons/insta.png', :class => "img-responsive") %></a>
    </div>

    <div class="footer-left">

      <p class="footer-links">
        <a href="#">Blog</a>
         ·
        <a href="#" data-toggle="modal" data-target="#donationModal">Donate</a>
         ·
        <a href="#" data-toggle="modal" data-target="#aboutModal">About</a>
         ·
        <a href="#" data-toggle="modal" data-target="#contactModal">Contact</a>
      </p>

      <p style="color:#B82601;">PlaceHolder.com &copy; 2016</p>
    </div>

  </footer>

  <!-- Contact modal -->
  <div id="contactModal"class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Contact</h4>
        </div>
        <div class="modal-body">
          <p>placeholder@mail.com</p>
        </div>
        <div class="modal-footer">

        </div>
      </div>
    </div>
  </div>

  <!-- Donation modal -->
  <div id="donationModal"class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Donate</h4>
        </div>
        <div class="modal-body">
          <p>Donate here</p>
        </div>
        <div class="modal-footer">

        </div>
      </div>
    </div>
  </div>

  <!-- About modal -->
  <div id="aboutModal"class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">About</h4>
        </div>
        <div class="modal-body">
          <p>Some info about the page and myself of course</p>
        </div>
        <div class="modal-footer">

        </div>
      </div>
    </div>
  </div>

  <!-- Analytics -->
  <%= render partial: "partials/google_analytics_pageview" %>
</body>
</html>
