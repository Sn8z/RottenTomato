<div class="ui middle aligned center aligned grid padded">
    <div class="column userbox">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="ui inverted stacked segment">
            <div class="field">
                <h1 class="ui inverted header">Login</h1>
            </div>
            <br>
            <div class="field">
                <div class="ui fluid left icon input">
                    <i class="user icon"></i>
                    <%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>
                </div>
            </div>
            <br>
            <div class="field">
                <div class="ui fluid left icon input">
                    <i class="lock icon"></i>
                    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
                </div>
            </div>
            <br>
            <div class="field">
                <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
                <% end %>
            </div>
            <br>
            <%= f.submit "Log in",:class=>'ui fluid large green submit button' %>
        </div>
        <% end %>

        <div class="ui inverted message">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>
    </div>
</div>
