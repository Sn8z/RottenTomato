<div class="ui middle aligned center aligned grid padded">
    <div class="column userbox">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="ui inverted stacked segment">
            <div class="field">
                <h1 class="ui inverted header">Update settings</h1>
            </div>
            <br>
            <div class="field">
                <div class="ui fluid left icon input">
                    <i class="user icon"></i>
                    <%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>
                </div>
            </div>
            <br>
            <div class="field">
                <div class="ui fluid left icon input">
                    <i class="user icon"></i>
                    <%= f.text_field :username, autofocus: true, :placeholder => 'Username' %>
                </div>
            </div>
            <br>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for:
                <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
                <i>(leave blank if you don't want to change it)</i><br/>
                <div class="ui fluid left icon input">
                    <i class="lock icon"></i>
                    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
                </div>
            </div>
            <br>
            <div class="field">
                <div class="ui fluid left icon input">
                    <i class="lock icon"></i>
                    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirm password' %>
                </div>
            </div>
            <br>
            <div class="field">
                <i>(we need your current password to confirm your changes)</i><br/>
                <div class="ui fluid left icon input">
                    <i class="lock icon"></i>
                    <%= f.password_field :current_password, autocomplete: "off", :placeholder => 'Password' %>
                </div>
            </div>
            <br>
            <div class="field">
                <%= f.submit "Update",:class=>'ui fluid large green submit button' %>
            </div>
            <br>
            <% end %>
        </div>
        <div class="ui inverted stacked segment">
            <div class="field">
                <h1 class="ui inverted header">Delete user</h1>
            </div>
            <br>
            <div class="field">
                <%= button_to "Cancel my account", registration_path(resource_name),:class=>'ui fluid large red submit button', data: { confirm: "Are you sure?" }, method: :delete %>
            </div>
        </div>
        <% if devise_error_messages! != "" %>
        <div class="ui error message">
            <%= devise_error_messages! %>
        </div>
        <% end %>
    </div>
</div>
