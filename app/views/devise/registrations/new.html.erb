<div class="ui middle aligned center aligned grid padded">
    <div class="column userbox">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="ui inverted stacked segment">
            <div class="field">
                <h1 class="ui inverted header">Create account</h1>
            </div>
            <br>
            <div class="field">
                <div class="ui fluid left icon input">
                    <i class="user icon"></i>
                    <%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>
                </div>
            </div>
            <br>
            <div class="field">
                <div class="ui fluid left icon input">
                    <i class="user icon"></i>
                    <%= f.text_field :username, autofocus: true, :placeholder => 'Username' %>
                </div>
            </div>
            <br>

            <div class="field">
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>
                    characters minimum)</em>
                <% end %><br/>
                <div class="ui fluid left icon input">
                    <i class="lock icon"></i>
                    <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
                </div>
            </div>
            <br>
            <div class="field">
                <div class="ui fluid left icon input">
                    <i class="lock icon"></i>
                    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirm password' %>
                </div>
            </div>
            <br>
            <div class="field">
                <%= f.submit "Sign up",:class=>'ui fluid large orange submit button' %>
            </div>
            <% end %>
        </div>
        <% if devise_error_messages! != "" %>
        <div class="ui error message">
          <%= devise_error_messages! %>
        </div>
        <% end %>
    </div>
</div>
