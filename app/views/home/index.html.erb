                <%= image_tag('csgo_small.jpg', :class => "img-responsive img-grid") %>

              </div>
              <div class="col-sm-6 img-grid">
                <%= image_tag('tracer.jpg', :class => "img-responsive img-grid") %>

              </div>
              <div class="col-sm-6 img-grid">
                <%= image_tag('legion_small.jpg', :class => "img-responsive img-grid") %>

              </div>
            </div>
          </div>
        </div>
        <!-- /.row -->
        <div class="spacer"></div>

        <div class="row">
            <div class="col-sm-3">
              <a class="ember" href="/csgo">
              <div class="bg">
                <%= image_tag('csgo_small.jpg', :class => "img-responsive img-center") %>
